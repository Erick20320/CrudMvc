@model Crud.DAL.Models.Acceso
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD - Iniciar Sesión</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        form {
            border: 3px solid #f1f1f1;
            width: 30%;
            margin: auto;
            margin-top: 5%;
        }

        input[type=text], input[type=password] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        button {
            font-family: spotify-circular, Helvetica, Arial, sans-serif;
            background-color: rgb(24, 119, 242);
            color: white;
            padding: 10px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
        }

        .container {
            padding: 16px;
        }

        .msg {
            padding: 0px;
        }

        .err {
            color: red;
        }
    </style>

</head>
<body>

    <form asp-action="Login" method="post">

        <div class="container">
            <label asp-for="Username"><b>Nombre de usuario</b></label>
            <input type="text" asp-for="Username" placeholder="Ingrese nombre de usuario">
            <div class="msg">
                <span class="err" asp-validation-for="Username"></span>
            </div>

            <label asp-for="Password"><b>Contraseña</b></label>
            <input type="password" asp-for="Password" placeholder="Ingrese contraseña">
            <div class="msg">
                <span asp-validation-for="Password" class="err"></span>
            </div>


            @if (TempData["msg"] != null)
            {
                <div class="msg">@TempData["msg"]</div>
            }

            <button type="submit">INICIAR SESION</button>
            <p><a asp-action="ForgotPassword" asp-controller="Autenticacion">¿Has olvidado tu contraseña?</a></p>
            <hr>
            <p class="">¿No eres un usuario? Regístrate</p>
            <a class="btn btn-success" href="/Autenticacion/Registration">Regístrate</a>
        </div>
    </form>

</body>
</html>

